extends layouts/main-layout.pug

block content
    if !profileUser
        p.profileNotFoundErrMsg Please check if the username or user id is incorrect. 
    else 
        script.
            const profileUserId = `!{profileUser._id}`

        .profileHeaderContainer
            .coverPhotoContainer 

                .userImageContainer 
                    img(src=profileUser.profileImg, alt='User profile image')
            .profileButtonsContainer 
                if profileUser._id !== loggedInUser._id 
                    a.profileButton(href=`/messages/${profileUser._id}`) 
                        i.fas.fa-envelope
                    +createFollowButton(profileUser, false)
            .userDetailsContainer 
                span.displayName #{profileUser.firstName} #{profileUser.lastName}
                span.username @#{profileUser.username}
                span.description #{profileUser.description}

                .followersContainer
                    a(href=`/profile/${profileUser.username}/following`) 
                        span.value #{0}
                        span Following
                    a(href=`/profile/${profileUser.username}/followers`) 
                        span.value #{0}
                        span Followers
        .tabsContainer 
            +createTab('Posts', `/profile/${profileUser.username}`, true)
            +createTab('Replies', `/profile/${profileUser.username}/replies`, false)


        .postsContainter
        
        +createPostModals(loggedInUser)

block scripts
    script(src='/js/profile.js') 