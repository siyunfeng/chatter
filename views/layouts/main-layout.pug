include ../mixins/mixins

doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(rel='icon', href='/images/chatter-logo.png')
        title #{pageTitle}
        link(href='https://cdnjs.cloudflare.com/ajax/libs/cropperjs/1.5.13/cropper.min.css', rel='stylesheet')
        link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css', rel='stylesheet', integrity='sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM', crossorigin='anonymous')
        link(rel="stylesheet", href="/css/main.css")
    body
        //- !{payloadKey} is one type of jade syntax, #{} as it is written, !{} as HTML.
        script.
            const loggedInUser = !{loggedInUserJS} 
        .wrapper
            .row
                nav.col-2
                    a.yellow(href='/')
                        img(src='/images/chatter-logo.png', alt='logo')
                    a(href='/')
                        i.fas.fa-house
                    a(href='/search')
                        i.fas.fa-magnifying-glass
                    a(href='/notifications')
                        i.fas.fa-bell
                        span#notificationsBadge
                    a(href='/messages')
                        i.fas.fa-envelope 
                        span#messagesBadge
                    a(href='/profile')
                        i.fas.fa-user
                    a(href='/logout')
                        i.fas.fa-right-from-bracket
                .mainSectionContainer.col-10.col-md-8.col-lg-6
                    .titleContainer
                        h1 #{pageTitle}
                        block headerButton

                    block content
                .d-none.d-md-block.col-md-2.col-lg-4

        script(src='https://kit.fontawesome.com/51cf44e63f.js', crossorigin='anonymous')
        script(src='https://code.jquery.com/jquery-3.7.0.min.js', integrity='sha256-2Pmvv0kuTBOenSvLm6bvfBSSHrUJ+3A7x6P5Ebd07/g=', crossorigin='anonymous')
        script(src='https://cdnjs.cloudflare.com/ajax/libs/cropperjs/1.5.13/cropper.min.js')
        script(src='https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js', integrity='sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r', crossorigin='anonymous')
        script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.min.js', integrity='sha384-fbbOQedDUMZZ5KreZpsbe1LCZPVmfTnH7ois6mU1QK+m14rQ1l2bGBq41eYeM/fS', crossorigin='anonymous')
        script(src="https://cdn.socket.io/4.6.0/socket.io.min.js")

        block scripts
        
        script(src='/js/common.js') 
        script(src='/js/clientSocket.js') 